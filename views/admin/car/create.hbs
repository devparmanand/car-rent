{{>header}}
 <title>Cental - Car Rent | Admin Car Section</title>
{{>navbar}}

{{>hero}}
<div class="container-fluid my-3">
    <div class="row">
        <div class="col-md-3">
         {{>sidebar}}
        </div>
        <div class="col-md-9">

<h5 class="bg-primary w-100 p-2 text-light text-center">Car
    <a href="/admin/car"><i class="fa fa-backward text-light float-end"></i></a>

</h5>
        
     <form action="/admin/car/store" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6 mb-3">
                <label >Name*</label>
               <input type="text" name="name" placeholder="Full Name" class="form-control 
               {{#if error.name}} border-danger {{else}} border-primary{{/if}}" value="{{data.name}}">
                    {{#if errorMessage.name}} <p class="text-danger">{{errorMessage.name}}</p>{{/if}}
                </div>
                <div class="col-md-6 mb-3">
                    <label >Pic*</label> 
                    <input type="file" name="pic" class="form-control {{#if error.pic}} border-danger {{else}} border-primary{{/if}}">
                    {{#if errorMessage.pic}} <p class="text-danger">{{errorMessage.pic}}</p>{{/if}}
                </div>
            </div>
        <div class="row">
                <div class="col-md-6 mb-3">
                <label >Rating*</label>
               <input type="number" name="rating" placeholder="Rating" min="1" max="5" class="form-control 
               {{#if error.rating}} border-danger {{else}} border-primary{{/if}}" value="{{data.rating}}">
                    {{#if errorMessage.rating}} <p class="text-danger">{{errorMessage.rating}}</p>{{/if}}
                </div>
                <div class="col-md-6 mb-3">
                    <label >Rent*</label>
                    <input type="number" name="rent" placeholder="Rent/Day" min="1" class="form-control 
                    {{#if error.rent}} border-danger {{else}} border-primary{{/if}}">
                    {{#if errorMessage.rent}} <p class="text-danger">{{errorMessage.rent}}</p>{{/if}}
                </div>
        </div>

                  <div class="row">
                <div class="col-md-6 mb-3">
                <label >Seating Capacity*</label>
               <input type="number" name="seatingCapacity" placeholder="Seating Capacity" min="1" max="7" class="form-control 
               {{#if error.seatingCapacity}} border-danger {{else}} border-primary{{/if}}" value="{{data.seatingCapacity}}">
                    {{#if errorMessage.seatingCapacity}} <p class="text-danger">{{errorMessage.seatingCapacity}}</p>{{/if}}
                </div>
                <div class="col-md-6 mb-3">
                    <label >Mode*</label>
                      <select name="mode" class="form-control border-primary">
                    <option {{checkDropDown data.mode "Atm"}} value="Atm" >Atm</option>
                    <option {{checkDropDown data.mode "Manual"}} value="Manual">Manual</option>
                   </select>
                </div>
        </div>

                
        <div class="row">
   <div class="col-md-6 mb-3">
                    <label>FuelType*</label>
                   <select name="fuelType" class="form-control border-primary">
                    <option {{checkDropDown data.fuelType "Petrol"}} value="Petrol">Petrol</option>
                    <option {{checkDropDown data.fuelType "Diesel"}} value="Diesel">Diesel</option>
                    <option {{checkDropDown data.fuelType "CNG"}} value="CNG">CNG</option>
                   </select>
                </div>

                <div class="col-md-6 mb-3">
                    <label>Active*</label>
                   <select name="active" class="form-control border-primary">
                    <option {{checkDropDown data.active true}} value="true">Yes</option>
                    <option {{checkDropDown data.active false}} value="false">No</option>
                   </select>
                </div>
        </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary p-2 w-100">Create</button>
            </div>

    </form>
        </div>
    </div>

</div>

{{>footer}}